<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root hgap="5.0" type="javafx.scene.layout.GridPane" vgap="5.0" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" minWidth="10.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" valignment="TOP" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="2.0" valignment="CENTER" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <Label fx:id="encounterName" text="Monster Name" GridPane.columnSpan="2">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <Label text="Name:" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets top="5.0"/>
            </GridPane.margin>
        </Label>
        <TextField fx:id="encounterNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets top="5.0"/>
            </GridPane.margin>
        </TextField>
        <VBox spacing="5.0" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="3">
            <children>
                <ImageView fx:id="encounterImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                           preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Label text="Change image:"/>
                        <Button mnemonicParsing="false" onAction="#browseForNewImage" text="Browse..."/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </HBox>
            </children>
            <padding>
                <Insets left="2.0" right="2.0"/>
            </padding>
        </VBox>
        <Label text="Reactions:" GridPane.rowIndex="2"/>
        <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS">
            <children>
                <ListView fx:id="encounterReactionsList" maxHeight="1.7976931348623157E308"
                          maxWidth="1.7976931348623157E308" prefHeight="150.0" prefWidth="200.0"/>
                <HBox spacing="5.0">
                    <children>
                        <Button fx:id="reactionAddButton" mnemonicParsing="false" onAction="#onReactionAdd" text="Add"/>
                        <Button fx:id="reactionDeleteButton" disable="true" mnemonicParsing="false"
                                onAction="#onReactionDelete" text="Delete"/>
                        <Button fx:id="reactionOpenButton" disable="true" mnemonicParsing="false"
                                onAction="#onReactionOpen" text="Open..."/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</fx:root>
